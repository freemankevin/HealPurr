---
const { records = [] } = Astro.props;
import SearchBox from './SearchBox.astro';
import ThemeToggle from './ThemeToggle.astro';
---

<header class="bg-gradient-to-r from-slate-800/95 via-purple-950/40 to-slate-800/95 border-b border-purple-400/30 sticky top-0 z-50 shadow-xl shadow-purple-500/20 backdrop-blur-xl dark:from-slate-800/95 dark:via-purple-950/40 dark:to-slate-800/95 dark:border-purple-400/30 dark:shadow-purple-500/20 light:from-white/95 light:via-purple-100/40 light:to-white/95 light:border-purple-600/30 light:shadow-purple-600/20" style="backdrop-filter: blur(20px); -webkit-backdrop-filter: blur(20px);">
  <div class="max-w-7xl mx-auto px-8 py-6">
    <div class="flex items-center justify-between gap-4">
      <a href="/" class="flex items-center gap-4 hover:opacity-90 transition-all duration-300 group flex-shrink-0">
        <div class="relative">
          <img src="/cats/Paw.svg" alt="HealPurr" class="w-10 h-10 group-hover:scale-110 transition-transform drop-shadow-lg" />
          <div class="absolute inset-0 bg-purple-400/20 rounded-full blur-xl opacity-0 group-hover:opacity-100 transition-opacity"></div>
        </div>
        <span class="header-title">Heal<span class="header-title-accent">Purr</span></span>
      </a>
      
      <div class="flex items-center gap-6">
        <ThemeToggle />
        <SearchBox {records} />
        
        <a 
          href="https://github.com/freemankevin/HealPurr.git" 
          target="_blank" 
          rel="noopener noreferrer"
          class="text-gray-300 hover:text-purple-400 transition-all duration-300 hover:scale-110 hover:drop-shadow-lg hover:drop-shadow-purple-400/50 flex-shrink-0 dark:text-gray-300 dark:hover:text-purple-400 dark:hover:drop-shadow-purple-400/50 light:text-gray-600 light:hover:text-purple-600 light:hover:drop-shadow-purple-600/50"
          title="View on GitHub"
        >
          <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
          </svg>
        </a>
      </div>
    </div>
  </div>
</header>