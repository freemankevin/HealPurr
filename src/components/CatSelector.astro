---
import { cats } from '../config/cats';

const { activeCat } = Astro.props;
---

<div class="flex gap-4 mb-12 flex-wrap justify-center">
  {cats.map(cat => (
    <a
      href={`/cat/${cat.id}`}
      class={`px-6 py-3 bg-gradient-to-br from-stone-50 to-stone-100/60 rounded-xl border transition-all duration-300 backdrop-blur-sm dark:from-slate-800 dark:to-slate-800/50 ${
        activeCat === cat.id
          ? 'border-purple-700 bg-purple-200/50 shadow-lg shadow-purple-700/30 scale-105 dark:border-purple-400 dark:bg-purple-900/40'
          : `border-purple-700/20 hover:border-purple-600/50 hover:bg-purple-200/30 hover:shadow-md hover:shadow-purple-700/20 hover:-translate-y-0.5 dark:border-purple-500/20 dark:hover:border-purple-400/50 dark:hover:bg-purple-900/20 dark:hover:shadow-purple-500/20 ${cat.color}`
      }`}
    >
      <img src={cat.svg} alt={cat.name} class="w-7 h-7 mr-2 inline-block drop-shadow-md" />
      <span class="text-base text-stone-900 font-medium font-cute dark:text-white">{cat.name}</span>
    </a>
  ))}
  <a
    href="/"
    class={`px-6 py-3 bg-gradient-to-br from-stone-50 to-stone-100/60 rounded-xl border transition-all duration-300 backdrop-blur-sm dark:from-slate-800 dark:to-slate-800/50 ${
      !activeCat
        ? 'border-purple-700 bg-purple-200/50 shadow-lg shadow-purple-700/30 scale-105 dark:border-purple-400 dark:bg-purple-900/40'
        : 'border-purple-700/20 hover:border-purple-600/50 hover:bg-purple-200/30 hover:shadow-md hover:shadow-purple-700/20 hover:-translate-y-0.5 dark:border-purple-500/20 dark:hover:border-purple-400/50 dark:hover:bg-purple-900/20 dark:hover:shadow-purple-500/20'
    }`}
  >
    <span class="text-base text-stone-900 font-medium font-cute dark:text-white">全部</span>
  </a>
</div>